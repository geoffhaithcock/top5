<div class="row">
  <h2> My Top 5 Songs</h2>
    <% @songs.each do |song| %>
      <div class="well well-lg">
        <% if song.artist.avatar.exists? != nil %>
        <%= image_tag song.artist.avatar.url(:thumb) %>
          <h2><%= link_to song.name, song %></h2>
    	  <h3>by <%= link_to song.artist.name %> </h3>
    	  <p><% "#{song.rating}".to_i.times do |rank| %>
    	    <span class="glyphicon glyphicon-star"></span>
            <% end %>
          <% end %>
        </p>	             
      </div>
    <% end %>
</div>